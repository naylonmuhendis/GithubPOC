<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="repoItem"
            type="app.presentation.products.entity.repo.RepoUI" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/detail_bg">

        <ImageView
            android:id="@+id/ivAvatar"
            loadImage="@{repoItem.avatarUrl}"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <app.presentation.components.AdvTextView
            android:id="@+id/tvOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:text="@{repoItem.ownerName}"
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            app:customFont="@string/font_regular"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hakan Mutlu" />

        <app.presentation.components.AdvTextView
            android:id="@+id/tvRepoName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="@{repoItem.fullName}"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:customFont="@string/font_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            tools:text="JetBrains/kotlin" />

        <app.presentation.components.AdvTextView
            android:id="@+id/tvRepoDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="3"
            android:text="@{repoItem.description}"
            android:textColor="@color/secondaryTextGray"
            android:textSize="12sp"
            app:customFont="@string/font_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRepoName"
            tools:text="The Kotlin Programming Language" />

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRepoDesc"
            app:tint="@color/red"
            tools:ignore="ContentDescription" />

        <app.presentation.components.AdvTextView
            android:id="@+id/tvStarCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@{repoItem.startGazerCountString}"
            android:textColor="@color/secondaryColor"
            android:textSize="12sp"
            app:customFont="@string/font_regular"
            app:layout_constraintBottom_toBottomOf="@+id/ivStar"
            app:layout_constraintStart_toEndOf="@+id/ivStar"
            app:layout_constraintTop_toTopOf="@+id/ivStar"
            tools:text="32892" />

        <app.presentation.components.AdvTextView
            android:id="@+id/ivLanguage"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginStart="12dp"
            android:text="@{repoItem.language}"
            app:customFont="@string/font_regular"
            app:layout_constraintBottom_toBottomOf="@+id/ivStar"
            app:layout_constraintStart_toEndOf="@+id/tvStarCount"
            app:layout_constraintTop_toTopOf="@+id/ivStar" />

        <app.presentation.components.AdvTextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@{repoItem.language}"
            android:textColor="@color/secondaryColor"
            android:textSize="12sp"
            app:customFont="@string/font_regular"
            app:layout_constraintBottom_toBottomOf="@+id/ivStar"
            app:layout_constraintStart_toEndOf="@+id/ivLanguage"
            app:layout_constraintTop_toTopOf="@+id/ivStar"
            tools:text="Kotlin" />

        <app.presentation.components.AdvTextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:text="@{repoItem.updatedAtFormatted}"
            android:textColor="@color/secondaryTextGray"
            android:textSize="12sp"
            app:customFont="@string/font_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRepoDesc"
            tools:text="tvEventTime" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
